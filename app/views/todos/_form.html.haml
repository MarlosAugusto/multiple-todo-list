= form_with(model: todo) do |form|
  - if todo.errors.any?
    %div{style: "color: red"}
      %h2
        = pluralize(todo.errors.count, "error")
        prohibited this todo from being saved:
      %ul
        - todo.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :description, style: "display: block"
    = form.text_area :description
  %div
    = form.label :category, style: "display: block"
    = form.select :category, @categories
  %div
    = form.label :deadline, style: "display: block"
    = form.datetime_field :deadline
  .hidden
    = form.label :list_id
    = form.text_field :list_id
  %div
    = form.submit
