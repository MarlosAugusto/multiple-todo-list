= form_with(model: todo, class: "mx-auto") do |form|
  - if todo.errors.any?
    %div{style: "color: red"}
      %h2
        = pluralize(todo.errors.count, "error")
        prohibited this todo from being saved:
      %ul
        - todo.errors.each do |error|
          %li= error.full_message
  .form-container
    .flex.flex-1
      = form.label :name, class: "form-label"
      = form.text_field :name, class: "form-field"
    .flex.flex-1
      = form.label :description, class: "form-label"
      = form.text_area :description, class: "form-field"
    .flex.flex-1
      = form.label :category, class: "form-label"
      = form.select :category, @categories, {}, {:class => "form-field"}
    .flex.flex-1
      = form.label :deadline, class: "form-label"
      = form.datetime_field :deadline, class: "form-field"
    .hidden
      = form.label :list_id
      = form.text_field :list_id
    .form-btn
      = form.submit "Save", :class => "save-btn", :style => "cursor: pointer;"
