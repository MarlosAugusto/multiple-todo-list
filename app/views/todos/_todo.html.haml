%div{id: "#{dom_id todo}"}
  .px-1.border-b-2.border-gray-400.text-center.font-bold
    %span
      = link_to todo.name, edit_todo_path(todo)
    %span{:class => todo.category}
      = todo.category
  .px-2.py-1.text-sm
    - if todo.description?
      %p.font-gray-800
        = todo.description
    - if todo.deadline?
      %p{:class => (todo.deadline.to_date - Time.now.to_date).to_i < 7 ? 'text-red-700 text-lg' : 'text-blue-700'}
        %strong Deadline:
        = "#{(todo.deadline.to_date - Time.now.to_date).to_i} dias"
